<% if (totalPages> 1) { %>
  <% if (page> 1) { %>
    <a href="./books/search?subject=<%= subject %>&author=<%= author %>&title=<%= title %>&page=<%= page - 1 %>"
      class="prevButton">
      ← Prev
    </a>
    <%} %>
      <span>Page <%= page %> of <%= totalPages %></span>

      <% if (page < totalPages) { %>
        <a href="./books/search?subject=<%= subject %>&author=<%= author %>&title=<%= title %>&page=<%= page + 1 %>"
          class="nextButton">
          Next →
        </a>
        <% } %>


          <% } %>