<form action="./books/search" method="get">
  <div class="filterDiv">
    <label for="subject">Subject</label>
    <select name="subject" id="subject">
      <option value="all">All</option>
      <option value="crime" <%=subject==='crime' ? 'selected' : '' %> >Crime, Thriller & Mystery</option>
      <option value="action" <%=subject==='action' ? 'selected' : '' %>>Action & Adventure</option>
      <option value="computing" <%=subject==='computing' ? 'selected' : '' %>>Computing, Internet & Digital Media
      </option>
      <option value="arts" <%=subject==='arts' ? 'selected' : '' %>>Arts, Film & Photography</option>
      <option value="language" <%=subject==='language' ? 'selected' : '' %>>Language, Linguistics & Writing</option>
      <option value="romance" <%=subject==='romance' ? 'selected' : '' %>>Romance</option>
      <option value="sports" <%=subject==='sports' ? 'selected' : '' %>>Sports</option>
      <option value="biographies" <%=subject==='biographies' ? 'selected' : '' %>>Biographies, Diaries & True Accounts
      </option>
      <option value="humour" <%=subject==='humour' ? 'selected' : '' %>>Humour</option>
      <option value="comics" <%=subject==='comics' ? 'selected' : '' %>>Comics & Mangas</option>
      <option value="politics" <%=subject==='politics' ? 'selected' : '' %>>Politics</option>
    </select>
  </div>
  <div class="filterDiv">
    <label for="author">Author</label>
    <input type="text" name="author" value="<%= author %>">
  </div>
  <div class="filterDiv">
    <label for="author">Title</label>
    <input type="text" name="title" value="<%= title || '' %>">
  </div>
  <button type="submit">Search catalogue</button>
</form>